			<Layer level="ARTWORK">
				<FontString name="$parentPageText" parentKey="PageText" inherits="CollectionsPageTextTemplate">
					<Anchors>
						<Anchor point="RIGHT" relativePoint="LEFT" x="-11" y="0"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				Mixin(self, CollectionsPagingMixin);
				self:OnLoad();
			</OnLoad>
		</Scripts>
