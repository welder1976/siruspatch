					<Anchor point="LEFT" relativeTo="$parentItem1" relativePoint="RIGHT">
						<Offset>
							<AbsDimension x="4" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Button>
			<Button name="$parentItem3" inherits="SmallDenominationTemplate" hidden="true">
