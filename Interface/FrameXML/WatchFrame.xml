				</FontString>
				<Texture parentKey="IconAnchor" name="$parentIconAnchor">
					<Size x="16" y="16"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="-10" y="2"/>
					</Anchors>
				</Texture>				
				<Texture parentKey="Icon" file="Interface/QuestFrame/ObjectiveTracker" name="$parentIcon" hidden="true">
					<Size x="16" y="16"/>
