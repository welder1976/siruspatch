					<Anchors>
						<Anchor point="CENTER" x="0" y="0" />
					</Anchors>
					<Color r="0.2" g="0.1" b="0.09" a="0.8"/>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				local parent = self:GetParent()

				if not parent.requiredLevelFrames then
